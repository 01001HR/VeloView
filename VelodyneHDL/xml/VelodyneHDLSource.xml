<ServerManagerConfiguration>
  <ProxyGroup name="sources">
    <SourceProxy name="VelodyneHDLSource" class="vtkVelodyneHDLSource" label="Velodyne HDL Source">
      <Documentation
         short_help="Velodyne HDL Source"
         long_help="Velodyne HDL Source">
      </Documentation>

      <StringVectorProperty
          name="PacketFile"
          animateable="0"
          command="SetPacketFile"
          number_of_elements="1">
          <FileListDomain name="files"/>
          <Documentation>
            This property specifies the pcap file to stream.
          </Documentation>
      </StringVectorProperty>

      <StringVectorProperty
          name="CorrectionsFile"
          animateable="0"
          label="Calibration File"
          command="SetCorrectionsFile"
          number_of_elements="1">
          <FileListDomain name="files"/>
          <Documentation>
            This property specifies the corrections file for a 64 laser sensor.
          </Documentation>
      </StringVectorProperty>

      <StringVectorProperty
          name="OutputFile"
          animateable="0"
          command="SetOutputFile"
          number_of_elements="1">
          <FileListDomain name="files"/>
          <Documentation>
            This property specifies the output packet file for writing.
          </Documentation>
      </StringVectorProperty>

      <Property
        name="Poll"
        command="Poll" />

      <Property
        name="ReadNextFrame"
        command="ReadNextFrame" />

      <Property
        name="Start"
        command="Start" />

      <Property
        name="Stop"
        command="Stop" />

      <DoubleVectorProperty
          name="TimestepValues"
          repeatable="1"
          information_only="1">
        <TimeStepsInformationHelper/>
      </DoubleVectorProperty>

      <IntVectorProperty
        name="CacheSize"
        command="SetCacheSize"
        number_of_elements="1"
        default_values="500">
        <Documentation>
        The cache size determines how many timesteps of data will be saved
        by this source.  A cache size of zero indicates an unlimited size.
        </Documentation>
      </IntVectorProperty>

   </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
